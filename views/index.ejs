<%
  const getImgPath = (path) => {
    if (!path) return '';
    if (path.startsWith('http') || path.startsWith('/')) return path;
    return '/' + path;
  }
%>
<!DOCTYPE html>
<html class="light scroll-smooth" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta name="google-site-verification" content="uZpAOTTSlBmLDLd0iK-33NIPdF6gCc-HK_r7bpCazUk" />
    <title><%= data.company.name %> Honey - <%= data.company.subtitle %></title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
    <link
      href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&amp;family=Noto+Sans:ital,wght@0,100..900;1,100..900&amp;display=swap"
      rel="stylesheet" />
    <link
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700&amp;display=swap"
      rel="stylesheet" />
    <script
      src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#c98f1d",
              "primary-dark": "#a67314",
              "background-light": "#fff8e0",
              "background-dark": "#2b1d0d",
              paper: "#ffffff",
            },
            fontFamily: {
              display: ["Noto Serif", "serif"],
              body: ["Noto Sans", "sans-serif"],
            },
            borderRadius: {
              DEFAULT: "0.5rem",
              lg: "1rem",
              xl: "1.5rem",
              "2xl": "2rem",
              full: "9999px",
            },
            backgroundImage: {
              "honey-gradient":
                "linear-gradient(135deg, #F9E076 0%, #c98f1d 100%)",
            },
          },
        },
      };
    </script>
    <style type="text/tailwindcss">
      ::-webkit-scrollbar {
        width: 8px;
      }
      ::-webkit-scrollbar-track {
        background: #fff8e0;
      }
      ::-webkit-scrollbar-thumb {
        background: #c98f1d;
        border-radius: 4px;
      }
      .bg-honeycomb {
        background-color: #fff;
        background-image: url(https://lh3.googleusercontent.com/aida-public/AB6AXuDadeG2qqkTIz7ESLfeQ4d59Oju_9npSssdvkOvahbLGWBGd3k4VaK4BPYeJe5mMwhWfcAXeaTvYr0xaDRyWLxjfgY4OMwXPcEU22pcMWEiF_1ZGosW7tC0XfZKUFxdvvsFX5bRQbTFv-oKyXMjCEdeGDFw5AmCQrV204s7L4cFoSdjF97GtNvF_NsRSk2_QpA1T4pJpCkdkXcPc1Llv5F0F-zZURhw2QA34VtqSYzJWFRA2piA8ZxOVL3NW7XhOIB6RJ3Mr4Rfvwc);
      }

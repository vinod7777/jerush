<%
  const getImgPath = (path) => {
    if (!path) return '';
    if (path.startsWith('http') || path.startsWith('/')) return path;
    return '/' + path;
  }
%>
<!DOCTYPE html>
<html class="light scroll-smooth" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <title>All Products - <%= data.company.name %></title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&amp;family=Noto+Sans:ital,wght@0,100..900;1,100..900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700&amp;display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#c98f1d",
              "primary-dark": "#a67314",
              "background-light": "#fff8e0",
              "background-dark": "#2b1d0d",
              paper: "#ffffff",
            },
            fontFamily: {
              display: ["Noto Serif", "serif"],
              body: ["Noto Sans", "sans-serif"],
            },
            borderRadius: {
              DEFAULT: "0.5rem",
              lg: "1rem",
              xl: "1.5rem",
              "2xl": "2rem",
              full: "9999px",
            },
            backgroundImage: {
              "honey-gradient":
                "linear-gradient(135deg, #F9E076 0%, #c98f1d 100%)",
            },
          },
        },
      };
    </script>
    <style type="text/tailwindcss">
      ::-webkit-scrollbar { width: 8px; }
      ::-webkit-scrollbar-track { background: #fff8e0; }
      ::-webkit-scrollbar-thumb { background: #c98f1d; border-radius: 4px; }
      .bg-honeycomb {
        background-color: #fff;
        background-image: url(https://lh3.googleusercontent.com/aida-public/AB6AXuDadeG2qqkTIz7ESLfeQ4d59Oju_9npSssdvkOvahbLGWBGd3k4VaK4BPYeJe5mMwhWfcAXeaTvYr0xaDRyWLxjfgY4OMwXPcEU22pcMWEiF_1ZGosW7tC0XfZKUFxdvvsFX5bRQbTFv-oKyXMjCEdeGDFw5AmCQrV204s7L4cFoSdjF97GtNvF_NsRSk2_QpA1T4pJpCkdkXcPc1Llv5F0F-zZURhw2QA34VtqSYzJWFRA2piA8ZxOVL3NW7XhOIB6RJ3Mr4Rfvwc);
      }
    </style>
</head>
<body class="bg-background-light text-[#1b160e] font-body selection:bg-primary selection:text-white">
    <!-- Navbar -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md border-b border-white/10 w-full">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
          <a class="flex items-center gap-2 group" href="/">
            <img src="/img/logo_2.png" alt="<%= data.company.name %> Logo" class="h-16 w-auto group-hover:rotate-12 transition-transform duration-300" />
            <span class="font-display text-2xl font-bold tracking-tight text-white"><%= data.company.name %></span>
          </a>
          <div class="hidden md:flex items-center gap-8">
            <a class="text-md font-medium text-white/90 hover:text-primary transition-colors" href="/">Home</a>
            <a class="text-md font-medium text-white/90 hover:text-primary transition-colors" href="/#about">About</a>
            <a class="text-md font-medium text-primary transition-colors" href="/allproduct">Variants</a>
            <a class="text-md font-medium text-white/90 hover:text-primary transition-colors" href="/#process">Process</a>
          </div>
          <div class="flex items-center gap-4">
            <a class="hidden sm:flex items-center justify-center h-10 px-6 bg-primary hover:bg-primary-dark text-white text-sm font-bold rounded-full transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5" href="#contact">Order Now</a>
             <button id="mobile-menu-btn" class="md:hidden p-2 text-white">
              <span class="material-symbols-outlined">menu</span>
            </button>
          </div>
        </div>
      </div>
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden bg-black/95 backdrop-blur-md border-t border-white/10 absolute top-20 left-0 w-full">
        <div class="flex flex-col p-6 space-y-4">
          <a class="text-lg font-medium text-white/90 hover:text-primary transition-colors" href="/">Home</a>
          <a class="text-lg font-medium text-white/90 hover:text-primary transition-colors" href="/#about">About</a>
          <a class="text-lg font-medium text-primary transition-colors" href="/allproduct">Variants</a>
          <a class="text-lg font-medium text-white/90 hover:text-primary transition-colors" href="/#process">Process</a>
          <a class="flex items-center justify-center h-12 px-6 bg-primary hover:bg-primary-dark text-white text-base font-bold rounded-xl transition-all duration-300 shadow-md" href="#contact">Order Now</a>
        </div>
      </div>
    </nav>

    <!-- Page Header -->
    <section class="pt-32 pb-12 bg-[#2b1d0d] text-white text-center relative overflow-hidden">
        <div class="absolute inset-0 opacity-20 bg-[url('https://www.transparenttextures.com/patterns/honeycomb.png')]"></div>
        <div class="container mx-auto px-6 relative z-10">
            <h1 class="font-display text-4xl md:text-5xl font-bold mb-4">Our Collection</h1>
            <p class="text-white/70 text-lg max-w-2xl mx-auto">Explore our range of pure honey and premium natural oils.</p>
        </div>
    </section>

    <!-- Honey Section -->
    <section class="py-20 bg-honeycomb" id="honey">
        <div class="container mx-auto px-6 max-w-7xl">
            <div class="flex items-center gap-4 mb-12">
                <div class="h-px bg-primary/30 flex-1"></div>
                <h2 class="font-display text-3xl font-bold text-[#1b160e] text-center">Pure Honey Variants</h2>
                <div class="h-px bg-primary/30 flex-1"></div>
            </div>
            
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% data.products.forEach(product => { %>
                    <div class="group relative bg-[#fffdf5] rounded-3xl overflow-hidden border border-[#f3efe8] hover:border-primary/30 transition-all duration-300 hover:shadow-2xl flex flex-col">
                        <div class="absolute top-4 left-4 z-20">
                             <span class="px-3 py-1 bg-primary text-white text-xs font-bold uppercase tracking-wider rounded-lg shadow-lg"><%= product.tag %></span>
                        </div>
                        <div class="h-64 w-full relative overflow-hidden bg-gray-100">
                            <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10"></div>
                            <img alt="<%= product.name %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" src="<%= getImgPath(product.images.main) %>" />
                            <div class="absolute bottom-4 left-4 z-20 text-white">
                                <h3 class="font-display text-2xl font-bold"><%= product.shortName %></h3>
                            </div>
                        </div>
                        <div class="p-6 flex-1 flex flex-col">
                            <p class="text-gray-600 text-sm mb-4 flex-1"><%= product.shortDescription %></p>
                            
                            <div class="space-y-3">
                                <div class="flex justify-between items-center text-sm">
                                    <span class="text-gray-500">Taste</span>
                                    <span class="font-medium text-[#1b160e]"><%= product.tasteProfile ? product.tasteProfile.summary : 'Natural' %></span>
                                </div>
                                <div class="flex justify-between items-center text-sm">
                                    <span class="text-gray-500">Available Sizes</span>
                                    <span class="font-medium text-[#1b160e]"><%= product.sizes.join(', ') %></span>
                                </div>
                            </div>

                            <div class="mt-6 pt-4 border-t border-gray-100 flex items-center justify-between">
                                <div class="flex flex-col">
                                    <span class="text-xs text-gray-500">Starting from</span>
                                    <div class="flex items-baseline gap-2">
                                        <span class="text-xl font-bold text-primary">₹<%= product.price %></span>
                                        <% if(product.originalPrice) { %>
                                            <span class="text-xs text-gray-400 line-through">₹<%= product.originalPrice %></span>
                                        <% } %>
                                    </div>
                                </div>
                                <a href="/product/<%= product.slug %>" class="w-10 h-10 rounded-full bg-[#1b160e] text-white flex items-center justify-center hover:bg-primary transition-colors">
                                    <span class="material-symbols-outlined text-sm">arrow_forward</span>
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        </div>
    </section>

    <!-- Oils Section -->
    <section class="py-20 bg-background-light border-t border-[#efe6d5]" id="oils">
        <div class="container mx-auto px-6 max-w-7xl">
            <div class="flex items-center gap-4 mb-12">
                <div class="h-px bg-primary/30 flex-1"></div>
                <h2 class="font-display text-3xl font-bold text-[#1b160e] text-center">Premium Natural Oils</h2>
                <div class="h-px bg-primary/30 flex-1"></div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                <% if (data.oil && data.oil.length > 0) { %>
                    <% data.oil.forEach(oil => { %>
                        <div class="group relative bg-white rounded-3xl overflow-hidden border border-[#f3efe8] hover:border-primary/30 transition-all duration-300 hover:shadow-2xl flex flex-col">
                            <div class="absolute top-4 left-4 z-20">
                                <span class="px-3 py-1 bg-[#2b1d0d] text-white text-xs font-bold uppercase tracking-wider rounded-lg shadow-lg"><%= oil.tag %></span>
                            </div>
                            <div class="h-64 w-full relative overflow-hidden bg-gray-100">
                                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent z-10"></div>
                                <img alt="<%= oil.name %>" class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" src="<%= getImgPath(oil.images.main) %>" />
                                <div class="absolute bottom-4 left-4 z-20 text-white">
                                    <h3 class="font-display text-2xl font-bold"><%= oil.shortName %></h3>
                                </div>
                            </div>
                            <div class="p-6 flex-1 flex flex-col">
                                <p class="text-gray-600 text-sm mb-4 flex-1"><%= oil.shortDescription %></p>
                                
                                <div class="space-y-3">
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-gray-500">Type</span>
                                        <span class="font-medium text-[#1b160e]"><%= oil.tags[0] %></span>
                                    </div>
                                    <div class="flex justify-between items-center text-sm">
                                        <span class="text-gray-500">Available Sizes</span>
                                        <span class="font-medium text-[#1b160e]"><%= oil.sizes.join(', ') %></span>
                                    </div>
                                </div>

                                <div class="mt-6 pt-4 border-t border-gray-100 flex items-center justify-between">
                                    <div class="flex flex-col">
                                        <span class="text-xs text-gray-500">Starting from</span>
                                        <div class="flex items-baseline gap-2">
                                            <% 
                                                let minPrice = Infinity;
                                                if (oil.sizePrices) {
                                                    Object.values(oil.sizePrices).forEach(p => {
                                                        if (p < minPrice) minPrice = p;
                                                    });
                                                }
                                                if (minPrice === Infinity) minPrice = 0;
                                            %>
                                            <span class="text-xl font-bold text-primary">₹<%= minPrice %></span>
                                        </div>
                                    </div>
                                    <a href="<%= data.company.contact.whatsapp %>?text=Hi,%20I%20would%20like%20to%20order%20<%= oil.name %>" target="_blank" class="flex items-center gap-2 px-4 py-2 bg-[#2b1d0d] text-white text-sm font-bold rounded-full hover:bg-primary transition-colors">
                                        <span>Order</span>
                                        <span class="material-symbols-outlined text-sm">chat</span>
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <p class="text-center col-span-full text-gray-500">No oil products available at the moment.</p>
                <% } %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-[#1e1409] text-white/60 py-16 border-t border-white/5 font-body w-full overflow-hidden" id="contact">
      <div class="container mx-auto px-6 max-w-full">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
          <div class="col-span-1 md:col-span-1">
            <a class="flex items-center gap-2 mb-6 text-white" href="#">
              <img src="/img/logo_2.png" alt="<%= data.company.name %> Logo" class="h-16 w-auto" />
              <span class="font-display text-3xl font-bold"><%= data.company.name %></span>
            </a>
            <p class="text-sm leading-relaxed mb-6"><%= data.company.description %></p>
            <div class="flex gap-4">
              <a class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-primary hover:text-[#2b1d0d] transition-all" href="<%= data.company.social.facebook %>">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M22 12c0-5.523-4.477-10-10-10S2 6.477 2 12c0 4.991 3.657 9.128 8.438 9.878v-6.987h-2.54V12h2.54V9.797c0-2.506 1.492-3.89 3.777-3.89 1.094 0 2.238.195 2.238.195v2.46h-1.26c-1.243 0-1.63.771-1.63 1.562V12h2.773l-.443 2.89h-2.33v6.988C18.343 21.128 22 16.991 22 12z" clip-rule="evenodd" /></svg>
              </a>
              <a class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-primary hover:text-[#2b1d0d] transition-all" href="<%= data.company.social.instagram %>">
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path fill-rule="evenodd" d="M12.315 2c2.43 0 2.784.013 3.808.06 1.064.049 1.791.218 2.427.465a4.902 4.902 0 011.772 1.153 4.902 4.902 0 011.153 1.772c.247.636.416 1.363.465 2.427.048 1.067.06 1.407.06 4.123v.08c0 2.643-.012 2.987-.06 4.043-.049 1.064-.218 1.791-.465 2.427a4.902 4.902 0 01-1.153 1.772 4.902 4.902 0 01-1.772 1.153c-.636.247-1.363.416-2.427.465-1.067.048-1.407.06-4.123.06h-.08c-2.643 0-2.987-.012-4.043-.06-1.064-.049-1.791-.218-2.427-.465a4.902 4.902 0 01-1.772-1.153 4.902 4.902 0 01-1.153-1.772c-.247-.636-.416-1.363-.465-2.427-.047-1.024-.06-1.379-.06-3.808v-.63c0-2.43.013-2.784.06-3.808.049-1.064.218-1.791.465-2.427a4.902 4.902 0 011.153-1.772 4.902 4.902 0 011.772-1.153c.636-.247 1.363-.416 2.427-.465 1.067-.047 1.409-.06 3.809-.06zm1.493 13.301c-3.218 0-5.831-2.613-5.831-5.831 0-3.218 2.613-5.831 5.831-5.831 3.218 0 5.831 2.613 5.831 5.831 0 3.218-2.613 5.831-5.831 5.831zm-5.831-10c-2.305 0-4.169 1.864-4.169 4.169 0 2.305 1.864 4.169 4.169 4.169 2.305 0 4.169-1.864 4.169-4.169 0-2.305-1.864-4.169-4.169-4.169zm8.555-2.168c-.779 0-1.411.632-1.411 1.411 0 .779.632 1.411 1.411 1.411.779 0 1.411-.632 1.411-1.411 0-.779-.632-1.411-1.411-1.411z" clip-rule="evenodd" /></svg>
             </a>
             <a class="w-10 h-10 rounded-full bg-white/5 flex items-center justify-center hover:bg-primary hover:text-[#2b1d0d] transition-all" href="<%= data.company.contact.whatsapp %>">
               <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413Z" /></svg>
             </a>
           </div>
         </div>
         <div>
           <h4 class="text-white font-bold mb-6 font-display">Quick Links</h4>
           <ul class="space-y-4 text-sm">
             <li><a class="hover:text-primary transition-colors" href="/">Home</a></li>
             <li><a class="hover:text-primary transition-colors" href="/#about">Our Story</a></li>
             <li><a class="hover:text-primary transition-colors" href="/allproduct">Variants</a></li>
             <li><a class="hover:text-primary transition-colors" href="/#process">Process</a></li>
           </ul>
         </div>
         <div>
           <h4 class="text-white font-bold mb-6 font-display">Legal</h4>
           <ul class="space-y-4 text-sm">
             <li><a class="hover:text-primary transition-colors" href="#">Privacy Policy</a></li>
             <li><a class="hover:text-primary transition-colors" href="#">Terms of Service</a></li>
             <li><a class="hover:text-primary transition-colors" href="#">Shipping Policy</a></li>
             <li><a class="hover:text-primary transition-colors" href="#">Refund Policy</a></li>
           </ul>
         </div>
         <div>
           <h4 class="text-white font-bold mb-6 font-display">Contact Us</h4>
           <ul class="space-y-4 text-sm">
             <li class="flex items-start gap-3">
               <span class="material-symbols-outlined text-primary text-lg mt-0.5">location_on</span>
               <span><%= data.company.contact.address %></span>
             </li>
             <li class="flex items-center gap-3">
               <span class="material-symbols-outlined text-primary text-lg">call</span>
               <span><%= data.company.contact.phone %></span>
             </li>
             <li class="flex items-center gap-3">
               <span class="material-symbols-outlined text-primary text-lg">mail</span>
               <span><%= data.company.contact.email %></span>
             </li>
           </ul>
         </div>
       </div>
       <div class="pt-8 border-t border-white/5 items-center gap-4 text-sm">
         <p class="text-center">© 2025 <%= data.company.name %> Honey. All rights reserved.</p>
       </div>
     </div>
   </footer>
   <script>
     const mobileMenuBtn = document.getElementById('mobile-menu-btn');
     const mobileMenu = document.getElementById('mobile-menu');

     mobileMenuBtn.addEventListener('click', () => {
       mobileMenu.classList.toggle('hidden');
       const icon = mobileMenuBtn.querySelector('span');
       icon.textContent = mobileMenu.classList.contains('hidden') ? 'menu' : 'close';
     });
   </script>
</body>
</html>
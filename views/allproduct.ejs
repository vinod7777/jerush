<%
  const getImgPath = (path) => {
    if (!path) return '';
    if (path.startsWith('http') || path.startsWith('/')) return path;
    return '/' + path;
  }
%>
<!DOCTYPE html>
<html class="light scroll-smooth" lang="en">
<head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />
    <meta name="google-site-verification" content="uZpAOTTSlBmLDLd0iK-33NIPdF6gCc-HK_r7bpCazUk" />
     <meta name="description" content="Buy 100% pure and natural honey from Jerush Honey. Jamun, Forest, Tulsi, Litchi & Multi-flavor honey.">
    <link rel="icon" type="image/x-icon" href="/img/logo_2.png" />

    <title>All Products - <%= data.company.name %> Honey</title>
    <link href="https://fonts.googleapis.com" rel="preconnect" />
    <link crossorigin href="https://fonts.gstatic.com" rel="preconnect" />
    <link href="https://fonts.googleapis.com/css2?family=Noto+Serif:ital,wght@0,100..900;1,100..900&amp;family=Noto+Sans:ital,wght@0,100..900;1,100..900&amp;display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:wght@100..700&amp;display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com?plugins=forms,container-queries"></script>
    <script id="tailwind-config">
      tailwind.config = {
        darkMode: "class",
        theme: {
          extend: {
            colors: {
              primary: "#c98f1d",
              "primary-dark": "#a67314",
              "background-light": "#fff8e0",
              "background-dark": "#2b1d0d",
              paper: "#ffffff",
            },
            fontFamily: {
              display: ["Noto Serif", "serif"],
              body: ["Noto Sans", "sans-serif"],
            },
            borderRadius: {
              DEFAULT: "0.5rem",
              lg: "1rem",
              xl: "1.5rem",
              "2xl": "2rem",
              full: "9999px",
            },
            backgroundImage: {
              "honey-gradient":
                "linear-gradient(135deg, #F9E076 0%, #c98f1d 100%)",
            },
          },
        },
      }
    </script>
    <style>
      ::-webkit-scrollbar { width: 8px; }
      ::-webkit-scrollbar-track { background: #fff8e0; }
      ::-webkit-scrollbar-thumb { background: #c98f1d; border-radius: 4px; }
    </style>
</head>
<body class="bg-background-light text-[#1b160e] font-body selection:bg-primary selection:text-white">
    <!-- Navigation -->
    <nav class="fixed top-0 left-0 right-0 z-50 bg-black/80 backdrop-blur-md border-b border-white/10 w-full">
      <div class="max-w-7xl mx-auto px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
          <a class="flex items-center gap-2 group" href="/">
            <img src="/img/logo_2.png" alt="Jerush Logo" class="h-16 w-auto group-hover:rotate-12 transition-transform duration-300" />
            <span class="font-display text-2xl font-bold tracking-tight text-white">Jerush</span>
          </a>
          <div class="hidden md:flex items-center gap-8">
            <a class="text-md font-medium text-white/90 hover:text-primary transition-colors" href="/#home">Home</a>
            <a class="text-md font-medium text-white/90 hover:text-primary transition-colors" href="/#about">About</a>
            <a class="text-md font-medium text-white/90 hover:text-primary transition-colors" href="/allproduct">Variants</a>
            <a class="text-md font-medium text-white/90 hover:text-primary transition-colors" href="/#process">Process</a>
          </div>
          <div class="flex items-center gap-4">
            <a class="hidden sm:flex items-center justify-center h-10 px-6 bg-primary hover:bg-primary-dark text-white text-sm font-bold rounded-full transition-all duration-300 shadow-md hover:shadow-lg transform hover:-translate-y-0.5" href="/#contact">
              Order Now
            </a>
            <button id="mobile-menu-btn" class="md:hidden p-2 text-white">
              <span class="material-symbols-outlined">menu</span>
            </button>
          </div>
        </div>
      </div>
      <!-- Mobile Menu -->
      <div id="mobile-menu" class="hidden md:hidden bg-black/95 backdrop-blur-md border-t border-white/10 absolute top-20 left-0 w-full">
        <div class="flex flex-col p-6 space-y-4">
          <a class="text-lg font-medium text-white/90 hover:text-primary transition-colors" href="/#home">Home</a>
          <a class="text-lg font-medium text-white/90 hover:text-primary transition-colors" href="/#about">About</a>
          <a class="text-lg font-medium text-white/90 hover:text-primary transition-colors" href="/allproduct">Variants</a>
          <a class="text-lg font-medium text-white/90 hover:text-primary transition-colors" href="/#process">Process</a>
          <a class="flex items-center justify-center h-12 px-6 bg-primary hover:bg-primary-dark text-white text-base font-bold rounded-xl transition-all duration-300 shadow-md" href="/#contact">Order Now</a>
        </div>
      </div>
    </nav>

    <!-- Page Title -->
    <section class="pt-32 pb-16 bg-gradient-to-b from-black/20 to-transparent">
      <div class="container mx-auto px-6 lg:px-8 text-center">
        <h1 class="font-display text-5xl lg:text-6xl font-bold text-[#2b1d0d] mb-4">Our Products</h1>
        <p class="text-gray-600 text-lg max-w-2xl mx-auto">Discover our complete range of pure, natural honey and oils. Each product is carefully sourced and tested for quality.</p>
      </div>
    </section>

    <!-- Honey Products Section -->
    <section class="py-24 bg-white">
      <div class="container mx-auto px-6 lg:px-8">
        <div class="mb-16">
          <h2 class="font-display text-4xl font-bold text-[#2b1d0d] mb-2">Pure Honey Collection</h2>
          <p class="text-gray-600 text-lg">100% natural, lab-tested honey from our trusted beekeepers</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% data.products.forEach(product => { %>
          <div class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-[#efe6d5] hover:border-primary/50">
            <div class="relative overflow-hidden h-64 bg-gradient-to-b from-background-light to-white">
              <img alt="<%= product.name %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" src="<%= getImgPath(product.images.main) %>" />
              <div class="absolute top-4 right-4">
                <span class="px-3 py-1 bg-primary text-white text-xs font-bold uppercase rounded-full"><%= product.tag %></span>
              </div>
            </div>
            <div class="p-6">
              <h3 class="font-display text-xl font-bold text-[#2b1d0d] mb-2"><%= product.name %></h3>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= product.shortDescription %></p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                <% product.tags.forEach(tag => { %>
                <span class="text-xs px-2 py-1 bg-primary/10 text-primary rounded-md font-semibold"><%= tag %></span>
                <% }) %>
              </div>

              <div class="flex items-center justify-between mb-6 py-4 border-t border-[#efe6d5]">
                <div>
                  <span class="text-3xl font-bold text-primary">₹<%= product.sizePrices[product.sizes[0]] %></span>
                  <span class="text-sm text-gray-400 line-through ml-2">₹<%= product.originalPrice %></span>
                </div>
                <span class="text-green-600 font-semibold text-sm"><%= product.discount %></span>
              </div>

              <a href="/product/<%= product.slug %>" class="w-full h-12 bg-primary hover:bg-primary-dark text-white font-bold rounded-xl transition-all transform hover:-translate-y-0.5 flex items-center justify-center">
                View Details
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- Oil Products Section -->
    <section class="py-24 bg-background-light">
      <div class="container mx-auto px-6 lg:px-8">
        <div class="mb-16">
          <h2 class="font-display text-4xl font-bold text-[#2b1d0d] mb-2">Pure Oil Collection</h2>
          <p class="text-gray-600 text-lg">Premium cold-pressed oils for cooking, beauty, and wellness</p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          <% data.oil.forEach(oilProduct => { %>
          <div class="group bg-white rounded-2xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 border border-[#efe6d5] hover:border-primary/50">
            <div class="relative overflow-hidden h-64 bg-gradient-to-b from-background-light to-white">
              <img alt="<%= oilProduct.name %>" class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" src="<%= getImgPath(oilProduct.images.main) %>" />
              <div class="absolute top-4 right-4">
                <span class="px-3 py-1 bg-primary text-white text-xs font-bold uppercase rounded-full"><%= oilProduct.tag %></span>
              </div>
            </div>
            <div class="p-6">
              <h3 class="font-display text-xl font-bold text-[#2b1d0d] mb-2"><%= oilProduct.name %></h3>
              <p class="text-gray-600 text-sm mb-4 line-clamp-2"><%= oilProduct.shortDescription %></p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                <% oilProduct.tags.forEach(tag => { %>
                <span class="text-xs px-2 py-1 bg-primary/10 text-primary rounded-md font-semibold"><%= tag %></span>
                <% }) %>
              </div>

              <div class="flex items-center justify-between mb-6 py-4 border-t border-[#efe6d5]">
                <div>
                  <span class="text-3xl font-bold text-primary">₹<%= oilProduct.sizePrices[oilProduct.sizes[0]] %></span>
                </div>
              </div>

              <a href="/oil/<%= oilProduct.slug %>" class="w-full h-12 bg-primary hover:bg-primary-dark text-white font-bold rounded-xl transition-all transform hover:-translate-y-0.5 flex items-center justify-center">
                View Details
              </a>
            </div>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-20 bg-white">
      <div class="container mx-auto px-6 lg:px-8">
        <h2 class="font-display text-4xl font-bold text-[#2b1d0d] text-center mb-16">Why Choose Jerush?</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
          <% data.features.forEach(feature => { %>
          <div class="text-center p-6">
            <div class="w-16 h-16 mx-auto mb-4 rounded-full bg-primary/10 flex items-center justify-center">
              <span class="material-symbols-outlined text-primary text-3xl"><%= feature.icon %></span>
            </div>
            <h3 class="font-display font-bold text-[#2b1d0d] mb-2"><%= feature.title %></h3>
            <p class="text-gray-600"><%= feature.description %></p>
          </div>
          <% }) %>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-[#1e1409] text-white/60 py-16 border-t border-white/5 font-body w-full overflow-hidden">
      <div class="container mx-auto px-6 max-w-full">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-12">
          <div class="col-span-1 md:col-span-1">
            <a class="flex items-center gap-2 mb-6 text-white" href="#">
              <img src="/img/logo_2.png" alt="<%= data.company.name %> Logo" class="h-16 w-auto" />
              <span class="font-display text-2xl font-bold"><%= data.company.name %></span>
            </a>
            <p class="text-sm leading-relaxed mb-6">
              <%= data.company.description %>
            </p>
          </div>
          <div>
            <h4 class="text-white font-bold mb-6 font-display">Quick Links</h4>
            <ul class="space-y-4 text-sm">
              <li><a class="hover:text-primary transition-colors" href="/#home">Home</a></li>
              <li><a class="hover:text-primary transition-colors" href="/#about">About</a></li>
              <li><a class="hover:text-primary transition-colors" href="/allproduct">Variants</a></li>
              <li><a class="hover:text-primary transition-colors" href="/#process">Process</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-white font-bold mb-6 font-display">Legal</h4>
            <ul class="space-y-4 text-sm">
              <li><a class="hover:text-primary transition-colors" href="#">Privacy Policy</a></li>
              <li><a class="hover:text-primary transition-colors" href="#">Terms of Service</a></li>
              <li><a class="hover:text-primary transition-colors" href="#">Shipping Policy</a></li>
              <li><a class="hover:text-primary transition-colors" href="#">Refund Policy</a></li>
            </ul>
          </div>
          <div>
            <h4 class="text-white font-bold mb-6 font-display">Contact Us</h4>
            <ul class="space-y-4 text-sm">
              <li class="flex items-start gap-3">
                <span class="material-symbols-outlined text-primary text-lg mt-0.5">location_on</span>
                <span><%= data.company.contact.address %></span>
              </li>
              <li class="flex items-center gap-3">
                <span class="material-symbols-outlined text-primary text-lg">call</span>
                <span><%= data.company.contact.phone %></span>
              </li>
              <li class="flex items-center gap-3">
                <span class="material-symbols-outlined text-primary text-lg">mail</span>
                <span><%= data.company.contact.email %></span>
              </li>
            </ul>
          </div>
        </div>
        <div class="pt-8 border-t border-white/5 items-center gap-4 text-sm">
          <p class="text-center">© 2025 <%= data.company.name %>. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      const mobileMenuBtn = document.getElementById('mobile-menu-btn');
      const mobileMenu = document.getElementById('mobile-menu');

      mobileMenuBtn.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        const icon = mobileMenuBtn.querySelector('span');
        icon.textContent = mobileMenu.classList.contains('hidden') ? 'menu' : 'close';
      });

      mobileMenu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          mobileMenu.classList.add('hidden');
          mobileMenuBtn.querySelector('span').textContent = 'menu';
        });
      });
    </script>
</body>
</html>

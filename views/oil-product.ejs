              </div>
            </div>
            <div class="grid grid-cols-1 gap-4">
              <button
                class="thumb-btn aspect-video rounded-xl overflow-hidden border-2 border-primary ring-2 ring-primary/20 p-0.5 transition-all">
                <img alt="Product View"
                  class="w-full h-full object-cover rounded-lg"
                  src="<%= getImgPath(product.images.main) %>" />
              </button>
            </div>
          </div>
          <div class="flex flex-col justify-center">
            <div class="mb-4 flex flex-wrap gap-2">
              <% product.tags.forEach((tag, index) => { %>
              <span
                class="px-3 py-1 <%= index === 0 ? 'bg-[#2b1d0d] text-white' : 'bg-[#c98f1d]/20 text-[#2b1d0d] border border-[#c98f1d]/40' %> text-xs font-bold uppercase tracking-wider rounded-md"><%=
                tag %></span>
              <% }) %>
            </div>
            <h1
              class="font-display text-4xl lg:text-5xl font-bold text-[#2b1d0d] mb-4 leading-tight"><%=
              product.name %></h1>
            <div class="flex items-end gap-4 mb-6">
              <% 
                  let initialPrice = product.price;
                  if (product.sizes && product.sizes.length > 0 && product.sizePrices) {
                      initialPrice = product.sizePrices[product.sizes[0]];
                  }
              %>
              <span id="product-price" class="text-3xl font-bold text-primary transition-opacity duration-200">₹<%= initialPrice %></span>
              <% if (product.originalPrice) { %>
              <span class="text-lg text-gray-400 line-through mb-1">₹<%=
                product.originalPrice %></span>
              <% } %>
              <% if (product.discount) { %>
              <span class="text-green-600 text-sm font-bold mb-1.5 ml-1"><%=
                product.discount %></span>
              <% } %>
            </div>
            <p class="text-gray-700 text-lg leading-relaxed mb-8">
              <%= product.description %>
            </p>
            <div class="mb-8">
              <label
                class="text-sm font-bold text-[#2b1d0d] uppercase tracking-wide mb-3 block">Select
                Size</label>
              <div class="flex flex-wrap gap-3">
                <% product.sizes.forEach((size, index) => { %>
                <label class="cursor-pointer">
                  <input <%=index === 0 ? 'checked' : '' %> class="peer sr-only size-selector"
                  name="size" type="radio" value="<%= size %>" data-price="<%= product.sizePrices ? product.sizePrices[size] : product.price %>"/>

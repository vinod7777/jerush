    <script>
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuBtn.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
    const icon = mobileMenuBtn.querySelector('span');
    icon.textContent = mobileMenu.classList.contains('hidden') ? 'menu' : 'close';
  });

  mobileMenu.querySelectorAll('a').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenu.classList.add('hidden');
      mobileMenuBtn.querySelector('span').textContent = 'menu';
    });
  });

  document.addEventListener('DOMContentLoaded', () => {
    const priceDisplay = document.getElementById('product-price');
    const whatsappLink = document.getElementById('whatsapp-link');
    const sizeSelectors = document.querySelectorAll('.size-selector');
    const mainImage = document.getElementById('main-product-image');
    const thumbBtns = document.querySelectorAll('.thumb-btn');
    const productName = "<%= product.name %>";
    const whatsappBase = "<%= data.company.contact.whatsapp %>";

    const updateProductDetails = (input) => {
        const price = input.dataset.price;
        const size = input.value;

        // Update Price
        if (priceDisplay && price) {
            priceDisplay.style.opacity = '0.5';
            setTimeout(() => {
                priceDisplay.textContent = `₹${price}`;
                priceDisplay.style.opacity = '1';
            }, 150);
        }

        // Update WhatsApp Link
        if (whatsappLink) {
             const textParam = `Hi, I would like to order ${productName} (${size})`;
             whatsappLink.href = `${whatsappBase}?text=${encodeURIComponent(textParam)}`;
        }
    };

    sizeSelectors.forEach(selector => {
        selector.addEventListener('change', (e) => updateProductDetails(e.target));
    });

    thumbBtns.forEach(btn => {
        btn.addEventListener('click', function() {
            const newSrc = this.querySelector('img').src;
            
            mainImage.style.opacity = '0';
            setTimeout(() => {
                mainImage.src = newSrc;
                mainImage.style.opacity = '1';
            }, 150);

            thumbBtns.forEach(b => {
                b.className = 'thumb-btn aspect-square rounded-xl overflow-hidden border-2 border-transparent hover:border-primary/50 p-0.5 transition-all';
            });
            
            this.className = 'thumb-btn aspect-square rounded-xl overflow-hidden border-2 border-primary ring-2 ring-primary/20 p-0.5 transition-all';
        });
    });
  });
</script>
